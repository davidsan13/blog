extend layout

block content
  div.content
    
    h1 Login
    form(action='/user/signin' method='post')
      div.form-group
        label(for='username') Email:
        input#username.form-control(
          type="email",
          name='username',
          value=''
        ) 
        label(for='password') Password:
        input#password.form-control(
          type="password",
          name='password',
          value=''
        )
        button.btn.btn-primary(type='submit') Login
